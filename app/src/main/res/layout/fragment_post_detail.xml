<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.PostDetailFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <TextView
        android:id="@+id/postDetailHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[post heading -placeholder]" />

    <TextView
        android:id="@+id/postDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[post text -placeholder]" />

    <Button
        android:id="@+id/postDetailEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit post"/>

    <Button
        android:id="@+id/postDetailDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete post"/>

</LinearLayout>